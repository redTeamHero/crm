modules = ["web", "nodejs-20", "python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Client Portal"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CRM Backend"

[[workflows.workflow]]
name = "Client Portal"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/client-portal && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "CRM Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd \"metro2 (copy 1)/crm\" && npm run dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 3000
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/client-portal && npm run start"]
build = ["bash", "-c", "cd apps/client-portal && npm install && npm run build"]
